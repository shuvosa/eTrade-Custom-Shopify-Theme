{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "eTrade"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Your one-stop shop for all things electronic."
    },
    {
      "type": "text",
      "id": "quick_links_heading",
      "label": "Quick Links Heading",
      "default": "Quick Links"
    },
    {
      "type": "text",
      "id": "service_links_heading",
      "label": "Customer Service Heading",
      "default": "Customer Service"
    },
    {
      "type": "text",
      "id": "contact_heading",
      "label": "Contact Info Heading",
      "default": "Contact Info"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "123 Street Name, City, Country"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "+1 234 567 8900"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Contact Email",
      "default": "info@etrade.com"
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social Link",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "Profile URL"
        },
        {
          "type": "text",
          "id": "icon_class",
          "label": "Font Awesome Icon Class",
          "default": "fab fa-facebook-f"
        }
      ]
    },
    {
      "type": "quick_link",
      "name": "Quick Link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Link Text",
          "default": "About Us"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL",
        }
      ]
    },
    {
      "type": "service_link",
      "name": "Service Link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Link Text",
          "default": "Shipping Policy"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
