<!-- Blog Post Section -->
<section class="bg-gray-100 py-12">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Latest from Our Blog</h2>
        <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {% if blogs[section.settings.blog].articles.size > 0 %}
                {% for article in blogs[section.settings.blog].articles %}
                    <article class="bg-white rounded-lg shadow-md overflow-hidden">
                        {% if article.image %}
                            <img src="{{ article.image | img_url: '400x200', crop: 'center' }}" alt="{{ article.title }}" class="w-full h-48 object-cover" width="400" height="200">
                        {% else %}
                            <img src="{{ 'pic2.jpg' | asset_url }}?height=200&width=400" alt="Placeholder" class="w-full h-48 object-cover" width="400" height="200">
                        {% endif %}
                        <div class="p-6">
                            <h3 class="font-semibold text-xl mb-2">{{ article.title }}</h3>
                            <p class="text-gray-600 mb-4">
                                {% if article.excerpt != blank %}
                                    {{ article.excerpt | strip_html | truncate: 100 }}
                                {% else %}
                                    {{ article.content | strip_html | truncate: 100 }}
                                {% endif %}
                            </p>
                            <a href="{{ article.url }}" class="text-blue-600 hover:underline">Read more</a>
                        </div>
                    </article>
                {% endfor %}
            {% else %}
                <!-- Fallback content -->
                <article class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="{{ 'pic2.jpg' | asset_url }}?height=200&width=400" alt="Blog post 1" class="w-full h-48 object-cover" width="400" height="200">
                    <div class="p-6">
                        <h3 class="font-semibold text-xl mb-2">Summer Fashion Trends</h3>
                        <p class="text-gray-600 mb-4">Discover the hottest fashion trends for this summer season.</p>
                        <a href="#" class="text-blue-600 hover:underline">Read more</a>
                    </div>
                </article>
                <article class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="{{ 'pic2.jpg' | asset_url }}?height=200&width=400" alt="Blog post 2" class="w-full h-48 object-cover" width="400" height="200">
                    <div class="p-6">
                        <h3 class="font-semibold text-xl mb-2">Sustainable Fashion</h3>
                        <p class="text-gray-600 mb-4">Learn about eco-friendly fashion choices and their impact.</p>
                        <a href="#" class="text-blue-600 hover:underline">Read more</a>
                    </div>
                </article>
                <article class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="{{ 'pic2.jpg' | asset_url }}?height=200&width=400" alt="Blog post 3" class="w-full h-48 object-cover" width="400" height="200">
                    <div class="p-6">
                        <h3 class="font-semibold text-xl mb-2">Accessorizing 101</h3>
                        <p class="text-gray-600 mb-4">Tips and tricks for perfecting your accessory game.</p>
                        <a href="#" class="text-blue-600 hover:underline">Read more</a>
                    </div>
                </article>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Blog Posts",
    "settings": [
        {
            "type": "blog",
            "id": "blog",
            "label": "Select Blog"
        }
    ],
    "presets": [
        {
            "name": "Blog Posts Section",
            "category": "Blog"
        }
    ]
}
{% endschema %}