<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg p-6 max-w-md mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-center">Customer Login</h1>
        
        <div class="space-y-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                        {{ form.errors | default_errors }}
                    </div>
                {% endif %}

                <div class="space-y-4">
                    <div>
                        <label for="CustomerEmail" class="block mb-2">Email</label>
                        <input type="email"
                            name="customer[email]"
                            id="CustomerEmail"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                            autocomplete="email"
                            required
                        >
                    </div>

                    <div>
                        <label for="CustomerPassword" class="block mb-2">Password</label>
                        <input type="password"
                            name="customer[password]"
                            id="CustomerPassword"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                            autocomplete="current-password"
                            required
                        >
                    </div>

                    <div class="flex items-center justify-between">
                        <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 w-full">
                            Sign In
                        </button>
                    </div>
                </div>
            {% endform %}

            <div class="pt-4 border-t border-gray-200">
                <div class="text-center space-y-4">
                    <p class="text-gray-600">
                        <a href="#recover" class="text-blue-600 hover:text-blue-800" id="RecoverPassword">
                            Forgot your password?
                        </a>
                    </p>
                    
                    <p class="text-gray-600">
                        New customer? 
                        <a href="{{ routes.account_register_url }}" class="text-blue-600 hover:text-blue-800">
                            Create account
                        </a>
                    </p>
                </div>
            </div>
        </div>

        {% form 'recover_customer_password' %}
            <div id="RecoverPasswordForm" class="hidden">
                <div class="space-y-4">
                    <h2 class="text-xl font-semibold mb-2">Reset Password</h2>
                    <p class="text-gray-600 mb-4">We will send you an email to reset your password</p>
                    
                    <div>
                        <label for="RecoverEmail" class="block mb-2">Email</label>
                        <input type="email"
                            name="email"
                            id="RecoverEmail"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                            required
                        >
                    </div>

                    <div class="flex items-center gap-4">
                        <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">
                            Submit
                        </button>
                        <button type="button" class="text-gray-600 hover:text-gray-800" onclick="toggleRecoverForm()">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        {% endform %}
    </div>
</div>


{% schema %}
{
    "name": "Login Section",
    "settings": []
}
{% endschema %}