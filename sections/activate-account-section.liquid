{% comment %}
  This section includes a form for activating a customer account.
{% endcomment %}

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8 text-center">Activate Account</h1>
  <div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
    <form method="post" action="/account/activate" accept-charset="UTF-8">
      <input type="hidden" name="form_type" value="activate_customer_password" />
      <input type="hidden" name="utf8" value="âœ“" />
      <input type="hidden" name="id" value="{{ form.id }}" />
      <input type="hidden" name="token" value="{{ form.token }}" />
      
      <div class="mb-4">
        <label for="password" class="block text-gray-700 mb-2">Password</label>
        <input type="password" id="password" name="customer[password]" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
      </div>
      <div class="mb-4">
        <label for="password_confirmation" class="block text-gray-700 mb-2">Confirm Password</label>
        <input type="password" id="password_confirmation" name="customer[password_confirmation]" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">Activate Account</button>
    </form>
  </div>
</div>

{% schema %}
{
  "name": "Activate Account Section",
  "settings": []
}
{% endschema %}