{% schema %}
    {
        "name": "Password Page",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Coming Soon"
            },
            {
                "type": "richtext",
                "id": "message",
                "label": "Message",
                "default": "<p>Our store is under construction. Follow us for updates!</p>"
            }
        ]
    }
    {% endschema %}
    
    <div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-8">
        <div class="text-center max-w-2xl">
            {% if section.settings.logo %}
                <div class="mb-8 max-w-xs mx-auto">
                    {{ section.settings.logo | image_url: width: 300 | image_tag:
                        class: 'mx-auto',
                        loading: 'eager'
                    }}
                </div>
            {% endif %}
            
            <h1 class="text-4xl font-bold mb-4">{{ section.settings.heading }}</h1>
            <div class="prose mb-8 mx-auto">
                {{ section.settings.message }}
            </div>
    
            <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                {% form 'storefront_password' %}
                    <div class="flex flex-col sm:flex-row gap-4 max-w-xs mx-auto">
                        <input type="password"
                            name="password"
                            placeholder="Enter password"
                            class="flex-1 px-4 py-2 border rounded-md"
                        >
                        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">
                            Enter
                        </button>
                    </div>
                {% endform %}
            </div>
    
            <div class="text-gray-600 text-sm">
                {% capture shopify_link %}
                    <a href="//www.shopify.com" target="_blank" rel="nofollow">Powered by Shopify</a>
                {% endcapture %}
                {{ shopify_link }}
            </div>
        </div>
    </div>