<div class="product-card bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-300">
  <div class="relative overflow-hidden">
    <a href="{{ product.url }}">
      <img 
        src="{{ product.featured_image | img_url: '600x600' }}" 
        alt="{{ product.title }}"
        class="w-full h-64 object-cover"
        loading="lazy"
        width="600"
        height="600"
      >
    </a>
    <div class="p-4">
      <h3 class="text-lg font-semibold">
        <a href="{{ product.url }}">
          {{ product.title }}
        </a>
      </h3>
      <p class="mt-2 text-gray-600">{{ product.price | money }}</p>
    </div>
  
  </div>
</div>